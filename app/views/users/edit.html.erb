<main>
  <p id = "notice"></p>
  <div class = "container">
    <div class = "row">
      <div class = "col-sm-12 cd-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>

        <% if @user.errors.any? %>
        <h3><%= @user.errors.count %>errors prohibited this obj from</br>
        being saved:</h3>
        <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
        </ul>
        <% end %>

        <%= form_with model: @user do |f| %>

        <div class = "form-group">
        <label for = "user_name">Name</label>
        <%= f.text_field :name, class:"form-control name", id:"user_name", autofocus: true %>
        </div>

        <div class = "form-group">
        <label for = "user_image">Image</label>
        <%= f.file_field :profile_image, class:"form-control-file user_image", id:"user_profile_image", accept: "image/*" %>
        </div>

        <div class = "form-group">
        <label for = "introduction">Introduction</label>
        <%= f.text_area :introduction, class: "form-control introduction", id:"user_introduction" %>
        </div>

        <div class ="form-group">
          <%= f.submit "Update User", class: "btn btn-secondary" %>
        </div>

        <% end %>
      </div>
    </div>
  </div>
</main>