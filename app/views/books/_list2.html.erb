             <th></th>
             <th>Title</th>
             <th>Opinion</th>
             <th colspan = "3"></th>
           </tr>
         </thead>
         <tbody>
           <% books.each do |book1| %>
           <tr>
            <td>
             <%= link_to user_path(book1.user) do %>
