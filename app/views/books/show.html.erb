<%= render 'books/list', user: @user, book: @book2 %>

   <div class = "col-md-8 offset-md-1">
     <h2>Book detail</h2>
     <table class = "table">
       <tbody>
         <tr>
           <td>
             <%= link_to user_path(@user.id) do %>
             <%= image_tag @user.get_profile_image(100,100) %>
             <% end %>
             <br>
             <%= link_to user_path(@user.id) do %>
             <%= @user.name %>
             <% end %>
           </td>
           <td>
             <%= link_to book_path do %>
             <%= @book.title %>
             <% end %>
           </td>
           <td>
             <%= @book.body %>
           </td>
           <td>
             <% if @book.user == current_user %>
             <%= link_to"Edit", edit_book_path(@book), class:"btn btn-sm btn-success" %>
             <% end %>
           </td>
           <td>
             <% if @book.user == current_user %>
             <%= link_to"Destroy", destroy_book_path(@book), class:"btn btn-sm btn-danger", method: :delete %>
             <% end %>
           </td>
         </tr>
       </tbody>
     </table>
   </div>

   </div>
 </div>
</main>